<?xml version="1.0" encoding="UTF-8"?>
<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2
	http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>${pies.classifier.assembly}</id>
	<formats>
		<format>zip</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<dependencySets>
		<dependencySet>
			<outputDirectory>pies-app-echo</outputDirectory>
			<includes>
				<include>com.gl.vn.me.ko.pies:pies-app-echo:*</include>
			</includes>
			<useStrictFiltering>true</useStrictFiltering>
			<outputFileNameMapping />
			<unpack>true</unpack>
			<useProjectArtifact>false</useProjectArtifact>
		</dependencySet>
		<dependencySet>
			<outputDirectory>pies-app-initiator</outputDirectory>
			<includes>
				<include>com.gl.vn.me.ko.pies:pies-app-initiator:*</include>
			</includes>
			<useStrictFiltering>true</useStrictFiltering>
			<outputFileNameMapping />
			<unpack>true</unpack>
			<useProjectArtifact>false</useProjectArtifact>
		</dependencySet>
		<dependencySet>
			<outputDirectory>pies-app-proxy</outputDirectory>
			<includes>
				<include>com.gl.vn.me.ko.pies:pies-app-proxy:*</include>
			</includes>
			<useStrictFiltering>true</useStrictFiltering>
			<outputFileNameMapping />
			<unpack>true</unpack>
			<useProjectArtifact>false</useProjectArtifact>
		</dependencySet>
	</dependencySets>
</assembly>