<?xml version="1.0" encoding="UTF-8"?>
<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2
	http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>${pies.classifier.assembly}</id>
	<formats>
		<format>zip</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<dependencySets>
		<dependencySet>
			<outputDirectory>harness</outputDirectory>
			<includes>
				<include>com.gl.vn.me.ko.pies:*:*:${pies.classifier.harness}</include>
			</includes>
			<useStrictFiltering>true</useStrictFiltering>
			<outputFileNameMapping />
			<unpack>true</unpack>
			<unpackOptions>
				<lineEnding>${pies.lineEnding}</lineEnding>
			</unpackOptions>
			<useProjectArtifact>false</useProjectArtifact>
		</dependencySet>
		<dependencySet>
			<outputDirectory>config</outputDirectory>
			<includes>
				<include>com.gl.vn.me.ko.pies:*:*:${pies.classifier.config}</include>
			</includes>
			<useStrictFiltering>true</useStrictFiltering>
			<outputFileNameMapping />
			<unpack>true</unpack>
			<unpackOptions>
				<lineEnding>${pies.lineEnding}</lineEnding>
			</unpackOptions>
			<useProjectArtifact>false</useProjectArtifact>
		</dependencySet>
	</dependencySets>
	<moduleSets>
		<moduleSet>
			<includes>
				<include>com.gl.vn.me.ko.pies:*</include>
			</includes>
			<binaries>
				<outputDirectory>lib-pies</outputDirectory>
				<includeDependencies>true</includeDependencies>
				<unpack>false</unpack>
				<dependencySets>
					<dependencySet>
						<outputDirectory>lib-pies</outputDirectory>
						<useStrictFiltering>true</useStrictFiltering>
						<includes>
							<include>com.gl.vn.me.ko.pies:*:jar</include>
						</includes>
					</dependencySet>
					<dependencySet>
						<outputDirectory>lib-3rdparty</outputDirectory>
						<useStrictFiltering>true</useStrictFiltering>
						<includes>
							<include>*:*:jar</include>
						</includes>
						<excludes>
							<exclude>com.gl.vn.me.ko.pies:*</exclude>
						</excludes>
					</dependencySet>
				</dependencySets>
			</binaries>
		</moduleSet>
	</moduleSets>
</assembly>